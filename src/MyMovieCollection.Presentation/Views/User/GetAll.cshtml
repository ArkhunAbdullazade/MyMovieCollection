@model IEnumerable<User>

@{
    ViewData["Title"] = "My Movies";
}

<style>
    h1,
    h2,
    h3 {
        text-align: center;
    }

    img {
        border-radius: 10px;
        width: 15em;
        height: 15em;
    }

    span,
    h1,
    h2,
    h3 {
        font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
    }

    .list{
        flex-direction: column;
        border: 2px solid dimgray;
        border-radius: 15px;
}

    .list {
        display: block;
        padding: 10px;
        padding-bottom: 25px;
        align-items: center;
        align-content: center;
    }
    .list > div {   
        flex-direction: column;
        margin: 10px;
        display: inline-flex;
        width: 240px;
        height: 350px;
        margin: 5px;
        margin-bottom: 40px;
        position: relative;
    }
    .list > div > div{
        margin: 5px;
        text-align: center;
    }
</style>

<h1>@ViewData["Title"]</h1>

@if (Model.Any<User>()) {
    <div class="list">
        @foreach (var user in Model)
        {
            <div>
                <div class="img-div">
                    @if (string.IsNullOrWhiteSpace(user.ProfilePicture)) {
                        <img class="img-account-profile rounded-circle mb-2" src="~/ProfilePictures/DefaultProfilePicture.png" alt="">  
                    }
                    else {
                        <img class="img-account-profile rounded-circle mb-2" src="@user.ProfilePicture" alt="">
                    }                
                </div>
                <div>
                    <span><b>@(user.UserName ?? "Unknown")</b></span>
                    <br>
                    <span><b>@(user.Email ?? "Unknown")</b></span>
                    <br>
                    <span><b>@(user.PhoneNumber ?? "Unknown")</b></span>
                    <br>
                    <form method="post" asp-action="Delete" asp-controller="User" asp-route-id="@user.Id">
                        <button class="btn btn-danger mt-2" type="submit" onclick="deleteUser(@user.Id)">DELETE</button>
                    </form>
                </div>
            </div>
        }
    </div>
}
else {
    <h3>You haven't added any movie yet.</h3>
}


<script>
    async function deleteUser(id)
    {
        event.preventDefault();

        await fetch('/User/Delete' + id,
            {
                method: "DELETE"
            })
                .then(data => {
                    window.location.href = '/Users';
                });
    }
</script>