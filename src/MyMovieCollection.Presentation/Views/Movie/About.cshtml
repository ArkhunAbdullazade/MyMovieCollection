@model Movie

@{
    ViewData["Title"] = $"About '{Model.Title}'";
}

<style>
    h1 {
        text-align: center;
    }

    h1 {
        font-size: 60px;
    }

    img {
        border-radius: 10px;
        width: 300px;
        height: 500px;
    }

    span,
    h1 {
        font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
    }

    .title {
        font-size: 40px;
    }

    .original-title {
        font-style: italic;
        font-size: 20px;
    }

    .release-date {
        font-size: 20px;
    }

    .description {
        font-size: 18px;
    }
    .description::before {
        content: 'Description: ';
    }
    .cont {
        display: flex;
        margin: auto;
    }
    .info-div {
        margin-left: 20px;
    }
    .score {
        display: inline-block;
        line-height: 0px;
        border-radius: 50%;
        border: 2px solid;
        font-size: 32px;
        border-color: white;
    }

    .score span {
        display: inline-block;
        padding-top: 50%;
        padding-bottom: 50%;
        margin-left: 8px;
        margin-right: 8px;
    }
</style>


<h1>@ViewData["Title"]</h1>

<div class="cont">
    <div class="img-div">
        <img src="@Model.PosterPath" alt="movie poster" />
    </div>
    <div class="info-div">
        <span class="title"><b>@Model.Title</b></span>
        <span class="original-title">@Model.OriginalTitle</span>
        <br>
        @if (@Model.ReleaseDate is null) { <span class="release-date">Release Date: Unknown</span> }
        else { <span class="release-date">Release Date: @Model.ReleaseDate</span> }
        <br>
        @if (@Model.Score is null) { <span class="score"><span>N/R</span></span> }
        else { <span class="imdb-score"><span>@Model.Score</span></span> }

        <p class="description">@Model.Overview</p>
    </div>
</div>