@model IEnumerable<Movie>

@{
    ViewData["Title"] = "Movie Collection";
}

<style>
    h1 {
        text-align: center;
    }

    img {
        border-radius: 10px;
        width: 170px;
        height: 250px;
    }

    span,
    h1 {
        font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
    }

    .title {
        font-size: 40px;
    }

    .original-title {
        font-style: italic;
        font-size: 20px;
    }

    .description {
        font-size: 15px;
    }

    .list {
        display: flex;
        flex-direction: row;
        border: 2px solid white;
        padding: 10px;
        border-radius: 15px;
        margin: 10px
    }
    .list > div {
        display: inline-block;
        margin-right: 15px;
    }
</style>

<h1>@ViewData["Title"]</h1>

<div class="list">
    @foreach (var movie in Model)
    {
        <div>
            <a asp-action="About" asp-controller="Movie" asp-route-id="@movie.Id"><img src="@movie.PosterUrl" alt="movie poster" /></a>
        </div>
        <div>
            <span class="title"><b>@movie.Title</b></span>
            <span class="original-title">@movie.OriginalTitle</span>
            <p class="description">@movie.Description</p>
        </div>
    }
</div>